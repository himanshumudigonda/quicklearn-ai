{
  "id": "/",
  "name": "1 Minute Learner App",
  "short_name": "1MinLearn",
  "description": "A quick learning app for bite-sized knowledge.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["standalone", "fullscreen"],
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "categories": ["education", "productivity"],
  "screenshots": [
    {
      "src": "screenshot1.jpg",
      "sizes": "1280x720",
      "type": "image/jpg",
      "platform": "wide"
    },
    {
      "src": "screenshot2.jpg",
      "sizes": "1280x720",
      "type": "image/jpg",
      "platform": "wide"
    }
  ],
  "scope": "/",
  "scope_extensions": [
    {
      "origin": "https://auth.example.com"
    },
    {
      "origin": "https://en.example.com"
    }
  ],
  "lang": "en",
  "dir": "ltr",
  "orientation": "portrait",
  "shortcuts": [
    {
      "name": "Learn Black Holes",
      "url": "/topics/black-holes",
      "icons": [{ "src": "/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Learn Machine Learning",
      "url": "/topics/machine-learning",
      "icons": [{ "src": "/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "quicklearn",
      "url": "/?q=%s"
    }
  ]
}
